<?xml version="1.0" encoding="UTF-8"?>
<beans  
    xmlns="http://www.springframework.org/schema/beans"  
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"  
    xmlns:p="http://www.springframework.org/schema/p"  
    xsi:schemaLocation="http://www.springframework.org/schema/beans  
               http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">  
               
    <bean id="dany" class="indra.talentCamp.database.models.Persona">
         <property name="nombre" value="Daniel" />
         <property name="edad" value="24" />
    </bean>
    
    <bean id="personaRepository" class="indra.talentCamp.database.persistence.PersonaRepository">
    	<property name="connectionString" value="jdbc:sqlite:indra.db" />
    </bean>
    
    <bean id="personaService" class="indra.talentCamp.database.services.PersonaService">
    	<property name="repository" ref="personaRepository" />
    </bean>
</beans>